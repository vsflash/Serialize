{
  "name": "vsflash/serialize",
  "description": "This library is designed to serialize objects of different classes into various data formats.",
  "keywords": ["library", "serialize"],
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Vadim Selyan",
      "email": "vadimselyan@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-simplexml": "*",
    "symfony/yaml": "^4.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "autoload": {
    "psr-4": {
      "vsflash\\Serialize\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "vsflash\\Serialize\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix --allow-risky=yes"
  }
}
